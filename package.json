{
  "private": true,
  "name": "@enghouse-qumu/widgets",
  "version": "1.0.0-beta.10",
  "description": "Qumu Cloud widget library",
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qumu/widgets.git"
  },
  "bugs": {
    "url": "https://github.com/qumu/widgets/issues"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present && npm run copy-dist",
    "copy-dist": "node -e \"require('fs').cpSync('./packages/lib/dist', './packages/docs/lighthouse/dist', {recursive: true, force: true})\"",
    "dev:watch": "npm run dev:watch --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "server": "npm run server -w lib"
  },
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "24.11.0"
  }
}
